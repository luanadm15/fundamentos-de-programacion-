			cout<<"Lunes a Jueves: 8:00 am - 0:00 pm y Viernes a Domingo: abierto las 24 horas"<<endl;
			break;
		case 0: cout<<"Saliste del menu de Supermercados"<<endl; break;
		default: cout<<"Opcion no Valida"<<endl;
		}
}

