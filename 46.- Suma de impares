#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int suma (int a);

void main() 
{
	int n, sum;
	cout<<"Ingresar la cantidad de N: ";
	cin>>n;
	sum = suma(n);
	cout<<"El resultado es: "<<sum<<endl;
  getch();
}

int suma (int a) 
{
	int i = 1, sum = 0;
	while (i <= a) 
  {
	  if (i%2 != 0) 
    {
	    sum =sum + i;
	  }
	  i++;		
	}
  return sum;
}
