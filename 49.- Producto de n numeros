#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

int suma (int a);

void main() 
{
	int n, sum;
	cout<<"Ingresar la cantidad N: ";
	cin>>n;
	sum = suma(n);
	cout<<"El resultado es: "<<sum<<endl;
  getch();
}

int suma (int a) 
{
	int i = 1, sum = 1;
	while (i <= a) 
  {
	  sum = sum * i;
	  i++;
	}
  return sum;
}
